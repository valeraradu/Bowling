<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<constant name="struts.ui.theme" value="simple" />
	<package name="example" namespace="/example" extends="struts-default">


		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
				result="error" />
		</global-exception-mappings>

		<action name="ShowGames" class="bowling.action.ShowGames">
			<result name="success">/example/ShowGames.jsp</result>
			<result name="error">/example/Error.jsp</result>
		</action>

		<action name="submitBall" class="bowling.action.SubmitBall">
			<result name="success">/example/PlayGame.jsp</result>
			<result name="FINISH">/example/ShowGames.jsp</result>
			<result name="input">/example/PlayGame.jsp</result>
		</action>

		<action name="addUser" class="bowling.action.AddPlayers">
			<result name="success">/example/AddPlayer.jsp</result>
			<result name="input">/example/AddPlayer.jsp</result>
		</action>

		<action name="startGame" class="bowling.action.StartGame">
			<result name="success">/example/AddPlayer.jsp</result>
			<result name="RESUME">/example/PlayGame.jsp</result>
		</action>

		<action name="createGame" class="bowling.action.CreateGame">
			<result name="success">/example/PlayGame.jsp</result>
			<result name="input">/example/AddPlayer.jsp</result>
		</action>

		<action name="submitGame" class="bowling.action.SubmitGame">
			<result name="success">/example/ShowGames.jsp</result>
		</action>

	</package>

</struts>
